{
    "version": 2,
    "name": "brain-tumour-detection-api",
    "builds": [
      {
        "src": "api/main.py",
        "use": "@vercel/python",
        "config": { "runtime": "python3.12" }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/main.py"
      }
    ]
  }
  